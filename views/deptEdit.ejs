<%- include ../layouts/header.ejs %>
<div class="wrapper">
<%- include ../layouts/sidebar.ejs %>	
    
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Edit Deaprtment</h4>
                    </div>
                    <div class="content">
                        <form action="deptEdit" method="post" id="dept_form" >
                            <input type="hidden" name="id" value="<%=data[0].id %>" />    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>New Department name</label>
                                 <input type="text" class="form-control validate[required]" name="new_deptName" id="new_deptName" value="<%=data[0].departName %>" placeholder="">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>New Department email</label>
                                <input type="email" class="form-control validate[required]" name="new_deptEmail" id="new_deptEmail" value="<%=data[0].groupMail %>" placeholder="">
                            </div>
                        </div>
                    </div>
                     <div class="form-group form-group-sm">
                        <div class="text-center" >  
                            <button type="submit" class="btn btn-sm btn-success">Submit</button>
                            <button type="reset" class="btn btn-sm btn-danger">Reset</button>
                            <button type="button" class="btn btn-sm btn-warning pull-right" onclick="javascript:history.back();">Go back</button>
                        </div>
                    </div>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../layouts/footer.ejs %>
   

