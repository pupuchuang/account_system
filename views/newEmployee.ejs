<%- include ../layouts/header.ejs %>
<div class="wrapper">
<%- include ../layouts/sidebar.ejs %>	
    
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">New Employee</h4>
                    </div>
                    <div class="content">
                         <form action="newEmployee" method="post" id="employee_form" >
                             <input type="hidden" name="id" value="<%=data[0].id %>" />    
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Name</label>
                                         <input type="text" class="form-control tooltip-tes " name="name" id="name" data-toggle="tooltip" title="The field is requird" maxlength="20">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" class="form-control tooltip-tes" name="email" id="email" data-toggle="tooltip" title="The field is requird" maxlength="20" placeholder="">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="dept" class="col-sm-3 control-label required">Department</label>
                                        <select class="form-control validate[required]" name="dept" id="dept">
                                          <% for ( var i = 0 ; i < data.length ; i++){ %>
                                             <option value='<%= data[i].id %>' >
                                                            <%= data[i].departName %>								
                                             </option>
                                            <% } %>
                                        <!--<option value="1" selected>SW</option><option value="2">QA</option><option value="3">PM</option><option value="4">Saels</option>-->
                                      </select>
                                    </div>
                                </div>
                            </div>
                             <div class="form-group form-group-sm">
                                <div class="text-center" >  
                                    <button type="submit" class="btn btn-sm btn-success">Submit</button>
                                    <button type="reset" class="btn btn-sm btn-danger">Reset</button>
                                    <button type="button" class="btn btn-sm btn-warning pull-right" onclick="window.location.href='/employee'">Go back</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../layouts/footer.ejs %>
   <script>
    
     $(function () { $("[data-toggle='tooltip']").tooltip(); });
        toastr.options.positionClass = 'toast-bottom-left';
    </script>

