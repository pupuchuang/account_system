<%- include ../layouts/header.ejs %>
<div class="wrapper">
<%- include ../layouts/sidebar.ejs %>	
    
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Edit Profile</h4>
                    </div>
                    <div class="content">
                        <form action="my_account" method="post" id="employee_form" >
                            <input type="hidden" name="id" value="<%=data[0].id %>" />    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" name="my_name" id="my_name" class="form-control border-input" disabled placeholder="Name" value="<%=data[0].UserName %>">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="form-group">
                                    <label>Department</label>
                                    <input type="text" name="my_dept" id="my_dept" class="form-control border-input" disabled placeholder="Department" value="<%=data[0].departName %>">
                                </div>
                            </div>	
                        </div>
                    </div>
                            
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="my_email" id="my_email" class="form-control border-input" disabled placeholder="Email" value="<%=data[0].UserEmail %>">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Password</label>
                                <input type="text" name="my_pwd" id="my_pwd" class="form-control border-input"  maxlength="20" disabled placeholder="Password" value="<%=data[0].UserPass %>">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>New Password</label>
                                <input type="password" name="myNew_pwd" id="myNew_pwd" class="form-control border-input tooltip-test"  data-toggle="tooltip" title="The field is requird" maxlength="20" placeholder="Password" value="">
                            </div>
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Confirm New Password</label>
                                <input type="password" name="con_myNew_pwd" id="con_myNew_pwd" class="form-control border-input tooltip-test"   data-toggle="tooltip" title="The field is requird" maxlength="20" placeholder="Password"  onblur="showError()" value="">
                            </div>  
                        </div>
                    </div>  
                    <div class="row ">
                       <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                            <% if (locals.error) { %>
                                <div class="alert alert-danger"> <%= error %></div>         
                            <% } %>
                       </div>
                    </div>        
                    <div class="form-group form-group-sm">
                          <div class="text-center" >  
                            <button type="submit" id="emp_submit" class="btn btn-sm btn-success">Submit</button>
                            <button type="reset" class="btn btn-sm btn-danger">Reset</button>
                            <button type="button" class="btn btn-sm btn-warning pull-right"  onclick="window.location.href='/login'">Go back</button>
                        </div>
                    </div>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../layouts/footer.ejs %>

    <script>
        $(function () { $("[data-toggle='tooltip']").tooltip(); });
         toastr.options.positionClass = 'toast-bottom-left';
        
        function showError(){
            var p1=document.getElementById("myNew_pwd").value;
            var p2=document.getElementById("con_myNew_pwd").value;
            
            if(p1!=p2)
                 alert('You have the wrong confirm passowrd!');  
        }
        
    </script>